	<ru.rx1310.app.a2iga.ui.CategoryPreference
		android:title="@string/pref_safety_category"/>

	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="safety.fingerprintPerm"
		android:title="@string/pref_safety_fingerprint_perm"
		android:summary="@string/pref_safety_fingerprint_perm_desc"
		android:defaultValue="false"
		android:enabled="true"/>

	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="safety.fingerprintPermVibro"
		android:title="@string/pref_safety_fingerprint_perm_vibro"
		android:summary="@string/pref_safety_fingerprint_perm_vibro_desc"
		android:defaultValue="false"
		android:enabled="true"
